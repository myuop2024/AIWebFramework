<%- include('layout', { 
  title: 'Error - Didit.me Integration', 
  body: `
    <div class="row justify-content-center mt-5">
      <div class="col-md-8">
        <div class="card shadow">
          <div class="card-body p-4 text-center">
            <h1 class="text-danger mb-4"><i class="bi bi-exclamation-triangle"></i> <%= error || 'Error' %></h1>
            
            <div class="alert alert-secondary mb-4">
              <p class="mb-0"><%= details || 'An unexpected error occurred.' %></p>
            </div>
            
            <div class="mt-4">
              <a href="/" class="btn btn-primary">Return to Home</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  `
}) %>